@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

System_Boundary(Sistema, "Sistema Educativo con RA - Iteración 1") {

    Container_Boundary(Frontend, "Frontend") {
        Container(PWA, "Progressive Web App (PWA)", "React.js", "Interfaz web utilizada por docentes y MINEDU.")
    }

    Container_Boundary(Backend, "Backend") {
        Container(API_Gateway, "API Gateway", "Spring Boot", "Orquesta solicitudes entre frontend y microservicios.")
        Container(AuthService, "Servicio de Autenticación", "Spring Boot", "Gestión de autenticación de usuarios.")
        Container(SearchService, "Servicio de Búsqueda", "Spring Boot", "Optimiza consultas usando PostgreSQL y Redis.")
    }

    Container_Boundary(Infraestructura, "Infraestructura") {
        Container(PostgreSQL, "Base de Datos", "PostgreSQL", "Almacena contenido curricular, actividades y progreso.")
        Container(Redis, "Redis Cache", "Sistema de Caché", "Almacena datos temporales para optimizar consultas.")
    }

    Rel(PWA, API_Gateway, "Solicitudes REST", "HTTPS")
    Rel(API_Gateway, AuthService, "Validación de autenticación")
    Rel(API_Gateway, SearchService, "Optimización de consultas")
    Rel(SearchService, PostgreSQL, "Consultas a base de datos")
    Rel(SearchService, Redis, "Consultas rápidas a caché")
}

@enduml